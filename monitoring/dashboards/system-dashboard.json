{
  "dashboard": {
    "title": "MediTriage - System Health",
    "tags": ["meditriage", "infrastructure"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Pod Status",
        "type": "stat",
        "targets": [
          {
            "expr": "count(kube_pod_status_phase{namespace=\"meditriage-prod\", phase=\"Running\"})",
            "legendFormat": "Running Pods"
          }
        ],
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4}
      },
      {
        "id": 2,
        "title": "CPU Usage by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{namespace=\"meditriage-prod\"}[5m]) * 100",
            "legendFormat": "{{ pod }}"
          }
        ],
        "gridPos": {"x": 6, "y": 0, "w": 18, "h": 8}
      },
      {
        "id": 3,
        "title": "Memory Usage by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{namespace=\"meditriage-prod\"} / 1024 / 1024",
            "legendFormat": "{{ pod }}"
          }
        ],
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8}
      },
      {
        "id": 4,
        "title": "Network I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{namespace=\"meditriage-prod\"}[5m])",
            "legendFormat": "RX {{ pod }}"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{namespace=\"meditriage-prod\"}[5m])",
            "legendFormat": "TX {{ pod }}"
          }
        ],
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8}
      },
      {
        "id": 5,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "database_connections_active",
            "legendFormat": "Active"
          },
          {
            "expr": "database_connections_idle",
            "legendFormat": "Idle"
          },
          {
            "expr": "database_connections_max",
            "legendFormat": "Max"
          }
        ],
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8}
      },
      {
        "id": 6,
        "title": "Request Rate by Endpoint",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{ method }} {{ path }}"
          }
        ],
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8}
      },
      {
        "id": 7,
        "title": "Disk Usage",
        "type": "gauge",
        "targets": [
          {
            "expr": "(node_filesystem_size_bytes - node_filesystem_avail_bytes) / node_filesystem_size_bytes * 100",
            "legendFormat": "{{ mountpoint }}"
          }
        ],
        "gridPos": {"x": 0, "y": 24, "w": 8, "h": 6}
      },
      {
        "id": 8,
        "title": "Pod Restarts (24h)",
        "type": "table",
        "targets": [
          {
            "expr": "increase(kube_pod_container_status_restarts_total{namespace=\"meditriage-prod\"}[24h])",
            "format": "table"
          }
        ],
        "gridPos": {"x": 8, "y": 24, "w": 16, "h": 6}
      }
    ],
    "refresh": "30s",
    "schemaVersion": 36,
    "version": 1
  }
}