# MediTriage Environment Configuration
# Development Environment - Update these values for your setup

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=meditriage
DB_USER=postgres
DB_PASSWORD=meditriage_dev_pass_2025
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# BACKEND API CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000
API_VERSION=v1
CORS_ORIGIN=http://localhost:5173

# JWT/Session (if implementing authentication)
JWT_SECRET=meditriage_jwt_secret_key_min_32_chars_long_for_security
SESSION_SECRET=meditriage_session_secret_key_also_needs_to_be_long

# ============================================
# MCP SERVER CONFIGURATION
# ============================================
MCP_PORT=3001
MCP_HOST=localhost
BACKEND_API_URL=http://localhost:3000

# ============================================
# AWS CONFIGURATION (Leave empty for local development)
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# S3 Bucket for medical documents
S3_BUCKET_NAME=meditriage-docs
S3_DOCUMENTS_PREFIX=medical-documents/

# ============================================
# RAG SERVICE CONFIGURATION
# ============================================
RAG_SERVICE_PORT=8000
RAG_SERVICE_HOST=localhost
CHROMA_PERSIST_DIR=/data/chromadb
CHROMA_COLLECTION_NAME=medical_knowledge

# Embedding Model (Free - Hugging Face)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# OpenAI (Optional - leave empty to use free Hugging Face models)
OPENAI_API_KEY=

# ============================================
# VOICE AI CONFIGURATION (Optional)
# ============================================
# Deepgram API (Free tier: 45k minutes) - Get key from: https://deepgram.com
DEEPGRAM_API_KEY=

# AssemblyAI (Alternative, $50 free credit) - Get key from: https://www.assemblyai.com
ASSEMBLYAI_API_KEY=

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=info

# Sentry (Error tracking) - Optional, leave empty for development
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# SECURITY
# ============================================
ENABLE_HELMET=true
ENABLE_CORS=true
TRUST_PROXY=false

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_RED_FLAG_DETECTION=true
ENABLE_RAG_RETRIEVAL=true
ENABLE_TRIAGE_LOGGING=true
ENABLE_ANALYTICS=true

# ============================================
# DISCLAIMERS & SAFETY
# ============================================
EMERGENCY_DISCLAIMER="This is not a substitute for professional medical advice. If experiencing a medical emergency, call 911 immediately."
MIN_AGE_REQUIREMENT=13

# ============================================
# DEVELOPMENT TOOLS
# ============================================
# PostgreSQL Admin (for local dev)
PGADMIN_EMAIL=admin@meditriage.local
PGADMIN_PASSWORD=admin123

# Redis (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=